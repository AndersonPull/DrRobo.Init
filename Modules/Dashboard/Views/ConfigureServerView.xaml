<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:navigation="clr-namespace:Drrobo.Modules.Shared.Components.NavigationBar"
    x:Class="Drrobo.Modules.Dashboard.Views.ConfigureServerView"
    NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="60,*">
        <navigation:NavigationBarComponent
            Grid.Row="0"
            ZIndex="1"
            SemanticProperties.Description="{Binding LocalizationResourceManager[ConfigServerProfile], Mode=OneWay}"
            Title="{Binding LocalizationResourceManager[ConfigServerProfile], Mode=OneWay}"/>
        <StackLayout
            Grid.Row="1"
            Margin="15"
            Spacing="10"
            VerticalOptions="FillAndExpand">
            <Button
                VerticalOptions="EndAndExpand"
                SemanticProperties.Description="{Binding LocalizationResourceManager[Add], Mode=OneWay}"
                Text="{Binding LocalizationResourceManager[Add], Mode=OneWay}"
                Style="{DynamicResource PrimaryButton}"
                Command="{Binding AddServerCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>