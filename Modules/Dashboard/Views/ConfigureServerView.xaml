<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:navigation="clr-namespace:Drrobo.Modules.Shared.Components.NavigationBar"
    xmlns:entry="clr-namespace:Drrobo.Modules.Shared.Components.Entry"
    x:Class="Drrobo.Modules.Dashboard.Views.ConfigureServerView"
    NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="60,*">
        <navigation:NavigationBarComponent
            Grid.Row="0"
            ZIndex="1"
            Title="Configure server"/>
        <VerticalStackLayout
            Grid.Row="1"
            Margin="15">
            <Label 
            Text="Configure Server"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Frame
                HeightRequest="40"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Azure">
                <entry:EntryComponent
                    x:Name="EntryAddServer"
                    TextColor="{DynamicResource White}"/>
            </Frame>
        </VerticalStackLayout>
        
    </Grid>
</ContentPage>
