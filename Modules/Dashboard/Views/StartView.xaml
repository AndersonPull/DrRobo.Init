<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Drrobo.Modules.Dashboard.Views.StartView"
    xmlns:content="clr-namespace:Drrobo.Modules.Dashboard.Components.Content"
    xmlns:component="clr-namespace:Drrobo.Modules.Dashboard.Components"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="False">
    <ContentPage.Content>
        <Grid
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
            <ContentView
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                x:Name="ContentBody">
                <content:DashBoardContent/>
            </ContentView>
            <component:BottomBarComponent
                IsVisible="False"
                Margin="0,0,0,20"
                HorizontalOptions="Center"
                VerticalOptions="End"
                x:Name="BottomBar"/>
            <component:LeftBarComponent
                IsVisible="False"
                Margin="50,0,0,0"
                HorizontalOptions="Start"
                VerticalOptions="CenterAndExpand"
                x:Name="LeftBar"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>